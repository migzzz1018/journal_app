<table>
    <thead>
        <tr class="flex flex-column justify-between" >
            <td>Task No.</td>
            <td>Task To Accomplish</td>
        </tr>
    </thead>
    <tbody>
        <% @category.tasks.each do |task| %>
            <tr>
                <td><%= task.id %></td>
                <td><%= task.name %></td>
                <td class="bg-red-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-full"><%= button_to 'Delete', category_task_path(@category, task), method: :delete %></td>
                <td class="bg-red-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-full"><%= link_to 'Edit', edit_category_task_path(@category, task) %></td>
                <td class="bg-red-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-full"><%= link_to 'Show', category_task_path(@category, task) %></td>
            </tr>
        <% end %>
    </tbody>
</table>