<table>
    <thead>
        <tr>
            <td>Task No.</td>
            <td>Task To Accomplish</td>
        </tr>
    </thead>
    <tbody>
        <% @category.tasks.each do |task| %>
            <tr>
                <td><%= task.id %></td>
                <td><%= task.name %></td>
                <td><%= button_to 'Delete', category_task_path(@category, task), method: :delete %></td>
                <td><%= link_to 'Edit', edit_category_task_path(@category, task) %></td>
                <td><%= link_to 'Show', category_task_path(@category, task) %></td>
            </tr>
        <% end %>
    </tbody>
</table>