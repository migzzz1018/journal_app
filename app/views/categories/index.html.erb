<table>
    <thead>
        <tr class="flex justify-betweeen" >
            <td>ID</td>
            <td class="pl-3">Category</td>
            <td class="flex items-center bg-red-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-full"><%= link_to "New Category", "/categories/new" %></td>
        </tr>
    </thead>

    <tbody>
        <% @categories.each do |category| %>
            <tr class="flex justify-between border-solid">
                <td><%= category.id %></td>
                <td class="pl-5"><%= category.name %></td>
                <td class="flex flex-row pl-72">
                    <div class="bg-red-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-full">
                        <%= link_to 'Show', "/categories/#{category.id}" %>
                    </div>
                    <div class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-full">
                        <%= link_to 'Edit', "/categories/#{category.id}/edit" %>
                    </div>
                    <div class="bg-red-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-full">
                        <%= button_to 'Delete', "/categories/#{category.id}", method: :delete  %>
                    </div>
                </td>
             </tr>
        <% end %>

        <div><%= button_to "Log Out", destroy_user_session_path, method: :delete, class="bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded-full" %></div>
    </tbody>

</table>

